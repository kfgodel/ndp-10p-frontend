{{navigation-bar}}

<div class="row">
  <div class="col s12">
    <h4>Usuarios</h4>
  </div>
</div>

<div class="row">

  <!-- User list -->
  <div class="col s8">
    <button class="btn" {{action "create"}}>Crear nuevo</button>

    <table class="table striped">
      <thead>
      <tr>
        <th>Id</th>
        <th>Nombre</th>
        <th>Login</th>
        <th>Password</th>
      </tr>
      </thead>

      <tbody>
      {{#each model as |user| }}
        <tr>
          <td>{{#link-to 'users.edit' user}}{{user.id}}{{/link-to}}</td>
          <td>{{#link-to 'users.edit' user}}{{user.name}}{{/link-to}}</td>
          <td>{{user.login}}</td>
          <td>{{user.password}}</td>
        </tr>
      {{else}}
        <tr>
          <td colspan="4">No users found</td>
        </tr>
      {{/each}}
      </tbody>

      <tfoot>
      <tr>
        <td>Total</td>
        <td></td>
        <td></td>
        <td>{{model.length}}</td>
      </tr>
      </tfoot>
    </table>
  </div>

  <!-- User edit form -->
  <div class="col s4">
    {{outlet}}
  </div>

</div>


