<div class="row">
  <div class="col s8 offset-s2 m6 offset-m3 l4 offset-l4">
    <form class="form-signin {{if errorMessage "has-error"}}">
      <h2 class="form-signin-heading">{{application.displayName}}</h2>

      {{tenpines/input-text label='Login name' value=model.login}}
      {{tenpines/input-password label='Password' value=model.password enter="logIn"}}
      {{#if errorMessage}}
        <span class="help-block">{{errorMessage}}</span>
      {{/if}}

      <button class="btn btn-lg btn-primary btn-block" {{action "logIn"}}>Entrar</button>
    </form>
  </div>
</div>

